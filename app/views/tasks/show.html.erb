<h1>id:<%= @task.id %>のタスク詳細</h1>
<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td>
<%= @task.id %>
</td>
  </tr>
  <tr>
    <th>status</th>
    <td>
<%= @task.status %>
</td>
  </tr>
  <tr>
    <th>task</th>
    <td>
<%= @task.content %>
</td>
  </tr>
</table>
<%= link_to '一覧に戻る', tasks_path %>
<%= link_to '編集ページへ',edit_task_path(@task),class: 'btn btn-light' %>
<%= link_to'削除する', @task,method: :delete, data:{confirm: '削除しますか'}, class: 'btn btn-danger'%>